
@model WebBanDoAnVatMup.Models.account_user
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" type="text/css" href="~/Assets/Admin/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="login-page">
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
        <fieldset>
            <div class="form">
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                @Html.TextBoxFor(model => model.user_name, new { @placeholder = "Username", @autoforcus = "autofocus" })
                @Html.TextBoxFor(model => model.password, new { @placeholder = "Password", @autoforcus = "autofocus", @type = "password" })
                <button type="submit">login</button>
                <p class="message">Not registered? <a href="#">Create an account</a></p>
            </div>
        </fieldset>
        }
    </div>
    <script src="~/Assets/Admin/js/login.js"></script>
</body>
</html>

